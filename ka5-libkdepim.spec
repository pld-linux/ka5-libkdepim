%{_datadir}/qlogging-categories5/libkdepim.renamecategories

%files devel
%defattr(644,root,root,755)
%{_includedir}/KF5/Libkdepim
%{_libdir}/cmake/KF5Libkdepim
%{_libdir}/cmake/MailTransportDBusService
